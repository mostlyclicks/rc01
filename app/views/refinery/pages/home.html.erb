<%= render '/refinery/content_page' %>

<% content_for :statement do %>
  <%= raw @page.content_for(:statement) %> 
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @brands.each_with_index do |brand, index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <% @brands.each_with_index do |brand, index| %>
            <div class="item <% if index == 0 %>active<% end %>">
              <%= image_fu brand.logo_image %>
              <h1><%= brand.name %></h1>
              <div class="carousel-caption">
                
              </div>
            </div>
          <% end %>
        </div>

        <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>

      </div>

    </div>
  </div>
</div>



